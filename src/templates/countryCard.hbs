{{#each this}}
<div class="card">

  <div>
    <h2 class="card-title">{{name}}</h2>
    <p class="title">Capital: <span class="list-group-item"> {{capital}}</span></p>
    <p class="title"> Population: <span class="list-group-item">{{population}}</span> </p>

    <ul class="list-group"></ul>
    <p class="title">Languages:</p>
    {{#each this.languages}}
      <li class="list-group-item">{{this.name}}</li>
    {{/each}}
    </ul>
  </div>
    <div class="card-img">
    <img src="{{flag}}" width = "450">
  </div>
</div>
{{/each}}